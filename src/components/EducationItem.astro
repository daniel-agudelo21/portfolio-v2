---
interface Props {
  title: string
  university: string
  link?: string
  date: string
}

const { title, university, date } = Astro.props
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border bg-gray-200 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-800 dark:text-white">{date}</time
>
<h3 class="text-lg font-semibold text-yellow-800 dark:text-black md:dark:bg-white rounded-full px-2 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal  dark:text-white text-pretty">
  {university}
</p>
